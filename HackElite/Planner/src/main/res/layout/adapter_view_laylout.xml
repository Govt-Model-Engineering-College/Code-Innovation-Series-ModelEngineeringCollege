<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent" android:layout_height="?android:attr/listPreferredItemHeight"
    android:padding="6dip">

    <CheckBox
        android:id="@+id/checkBox"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:clickable="true"
        android:focusable="false"
        android:onClick="checkBoxClicked"
        android:text="complete" />

    <LinearLayout android:orientation="vertical"
        android:layout_toLeftOf="@+id/checkBox" android:layout_width="fill_parent"
        android:layout_height="fill_parent" android:id="@+id/TextLayout">
        <TextView android:id="@+id/taskTitle" android:layout_width="fill_parent"
            android:layout_height="wrap_content" android:layout_weight="1"
            android:gravity="center_vertical" android:textSize="18sp"
            android:textColor="#FFFFFF" android:background="@color/colorPrimaryDark" />

        <TextView android:layout_width="fill_parent"
            android:layout_height="wrap_content" android:layout_weight="1" android:id="@+id/taskDescription"
            android:singleLine="true" android:ellipsize="marquee"
            android:scrollbars = "vertical"
            android:textSize="15sp" android:textColor="#FFFFFF"
            android:background="#FFBBAACC" />
    </LinearLayout>
</RelativeLayout>